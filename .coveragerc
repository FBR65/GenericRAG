[run]
source = src
omit = 
    */tests/*
    */test_*
    */__pycache__/*
    */venv/*
    */env/*
    */.tox/*
    */tmp/*
    */build/*
    */dist/*
include = 
    src/app/services/bge_m3_service.py
    src/app/utils/qdrant_utils.py
    src/app/services/search_service.py
    src/app/api/endpoints/query.py
    src/app/api/endpoints/ingest.py
    src/app/models/schemas.py
    src/app/settings.py
branch = True
parallel = True
context = test
concurrency = multiprocessing

[report]
exclude_lines =
    pragma: no cover
    def __repr__
    if self.debug:
    if settings.DEBUG
    raise AssertionError
    raise NotImplementedError
    if 0:
    if __name__ == .__main__.:
    class .*\\bProtocol\\):
    @(abc\\.)?abstractmethod
    pass
    return
    except Exception:
precision = 2
show_missing = True
skip_covered = False
partial_branches = True
show_contexts = True

[html]
directory = htmlcov/bge_m3
title = GenericRAG BGE-M3 Test Coverage Report
extra_css = 
    .cover-fill { background: rgb(92, 184, 92); }
    .cover-empty { background: rgb(231, 231, 231); }

[xml]
output = coverage_bge_m3.xml
show_contexts = True

[json]
output = coverage_bge_m3.json

[paths]
source = 
    src/
    */src/
    ./

[bge_m3_coverage]
# BGE-M3 specific coverage targets
service_coverage = 95
utils_coverage = 95
search_coverage = 95
api_coverage = 95
integration_coverage = 90

# Performance metrics
embedding_generation_coverage = 90
cache_coverage = 90
error_handling_coverage = 90
batch_processing_coverage = 90