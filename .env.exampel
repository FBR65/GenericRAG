# =============================================================================
# GenericRAG Configuration
# =============================================================================

# =============================================================================
# Application Settings
# =============================================================================
APP_HOST=0.0.0.0
APP_PORT=8000
GRADIO_PORT=7860

# =============================================================================
# Qdrant Vector Database Configuration
# =============================================================================
QDRANT_URL=your_url:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=generic_rag_collection

# =============================================================================
# ColPali Model Configuration
# =============================================================================
COLPALI_MODEL_NAME=vidore/colqwen2.5-v0.2

# =============================================================================
# Local Storage Configuration
# =============================================================================
# Directory for storing uploaded images
IMAGE_STORAGE_PATH=./data/images
# Temporary directory for processing
TEMP_STORAGE_PATH=./data/temp
# DSPy cache directory
DSPY_CACHE_PATH=./data/dspy_cache

# =============================================================================
# LLM Configuration
# =============================================================================
# Student model for main response generation
STUDENT_MODEL=google/gemma-3-27b-it
# Student model API base URL
STUDENT_BASE_URL=http://your_url/v1
# Student model API key
STUDENT_API_KEY=your_student_api_key_here

# Teacher model for GEPA optimization
TEACHER_MODEL=openai/gpt-oss-120b
# Teacher model API base URL
TEACHER_BASE_URL=http://your_url/v1
# Teacher model API key
TEACHER_API_KEY=your_teacher_api_key_here

# =============================================================================
# DSPy Configuration
# =============================================================================
# Maximum number of full evaluations for GEPA optimization
MAX_FULL_EVALS=3
# Number of threads for parallel processing
NUM_THREADS=4
# Whether to track optimization statistics
TRACK_STATS=True

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# =============================================================================
# Development Settings
# =============================================================================
# Enable debug mode
DEBUG=True
# Enable auto-reload
RELOAD=True
# CORS origins (comma-separated for production)
CORS_ORIGINS=http://localhost:3000,http://localhost:7860
